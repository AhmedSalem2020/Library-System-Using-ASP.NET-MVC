@model ELibrary.Models.ApplicationUser

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout - Copy.cshtml";
}

<div class="form-group left">
    <br />
    <br />
    <img src="~/Images/@Model.image" style="width:15%;height:auto;" />
</div>
<form class="form-horizontal">
    <div class="form-group">
        <div class="col-xs-3">
            <h4>First Name:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.fName</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>Last Name:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.lName</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>Email Address:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.Email</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>Address:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.address</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>BirthDate:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.birthDate</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>JoinDate:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.JoinDate</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>Phone Number:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.PhoneNumber</h5>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-3">
            <h4>Salary:</h4>
        </div>
        <div class="col-xs-6">
            <h5>@Model.Employee.salary</h5>
        </div>
    </div>
</form>
@Html.ActionLink("Update Profile", "UpdateEmp", "Employee", new { @class = "btn btn-success" })





